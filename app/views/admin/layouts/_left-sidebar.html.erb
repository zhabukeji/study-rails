    <div class="tpl-sidebar-user-panel am-text-center">
        <div class="tpl-user-panel-slide-toggleable">
            <div class="tpl-user-panel-profile-picture" style="width:100% ">
                <img src="/assets/img/user04.png" alt="" style="border-radius: 50%;">
            </div>
            <span class="user-panel-logged-in-text">
