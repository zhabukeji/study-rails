<article class="am-g blog-entry-article">
    <%= link_to article do %>
    <div class="am-u-lg-6 am-u-md-12 am-u-sm-12 blog-entry-img">
        <img src="/assets/i/f10.jpg" alt="" class="am-u-sm-12">
    </div>
    <div class="am-u-lg-6 am-u-md-12 am-u-sm-12 blog-entry-text">
        <span>article &nbsp;</span>
        <span> @<%= article.author %> &nbsp;</span>
        <% # time_ago_in_words 距离当前时间的间隔 对大于1天 显示 Y-m-d 小于一分钟则使用 time_ago_in_word 这个方法后续会写到concern里 %>
        <span><%= time_show(article.created_at,method(:time_ago_in_words)) %></span>
        <h1><%= article.title %></h1>
        <p><%= article.context %>
        </p>
    </div>
    <% end %>
</article>